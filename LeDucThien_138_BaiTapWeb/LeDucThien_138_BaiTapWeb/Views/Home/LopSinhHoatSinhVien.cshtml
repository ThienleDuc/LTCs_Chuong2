@model List<LeDucThien_138_BaiTapWeb.Models.LopSinhHoatSinhVien>
@{
    ViewData["Title"] = "Lớp sinh hoạt sinh viên";
    Layout = "~/Views/Shared/_LayoutProject.cshtml";
    ViewBag.flagActive = "LSHSV";
}

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-4">
            <input type="text" class="form-control" placeholder="Tìm kiếm sinh viên...">
        </div>
        <div class="col text-right">
            <button class="btn btn-success">+ Thêm sinh viên</button>
        </div>
    </div>
    <h2>Bảng Lớp Sinh Hoạt - Sinh Viên</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="text-truncate">Mã lớp</th>
                    <th class="text-truncate">Mã SV</th>
                    <th class="text-truncate">Họ tên</th>
                    <th class="text-truncate">Kì học</th>
                    <th class="text-truncate">Tích lũy</th>
                    <th class="text-truncate">GOP</th>
                    <th class="text-truncate">EOP</th>
                    <th class="text-truncate">Trạng thái</th>
                    <th class="text-truncate">Ghi chú</th>
                    <th class="text-truncate">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lshsv in Model)
                {
                    <tr>
                        <td class="text-truncate">@lshsv.MaLSH</td>
                        <td class="text-truncate">@lshsv.MaSV</td>
                        <td class="text-truncate">@lshsv.HoTen</td>
                        <td class="text-truncate">@lshsv.KiHoc</td>
                        <td class="text-truncate">@lshsv.TichLuy</td>
                        <td class="text-truncate">@lshsv.GOP</td>
                        <td class="text-truncate">@lshsv.EOP</td>
                        <td class="text-truncate">@lshsv.StatusLSHSV</td>
                        <td class="text-truncate" title="@lshsv.GhiChu">
                            @(lshsv.GhiChu != null && lshsv.GhiChu.Length > 20
                                ? lshsv.GhiChu.Substring(0, 20) + "..."
                                : lshsv.GhiChu)
                        </td>
                        <td class="text-truncate">
                            <button class="btn btn-warning btn-sm">Sửa</button>
                            <button class="btn btn-danger btn-sm">Xóa</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

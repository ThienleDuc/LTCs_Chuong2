@model List<LeDucThien_138_BaiTapWeb.Models.GiaoVien>
@{
    ViewData["Title"] = "Giáo viên";
    Layout = "~/Views/Shared/_LayoutProject.cshtml";
    ViewBag.flagActive = "GiaoVien";
}

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-4">
            <input type="text" class="form-control" placeholder="Tìm kiếm giáo viên...">
        </div>
        <div class="col text-right">
            <a href="@Url.Action("ThemGiaoVien", "Home")" class="btn btn-success">+ Thêm giáo viên</a>
        </div>
    </div>
    <h2>Bảng Giáo Viên</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="text-truncate">Mã GV</th>
                    <th class="text-truncate">Họ tên</th>
                    <th class="text-truncate">Ngày sinh</th>
                    <th class="text-truncate">Giới tính</th>
                    <th class="text-truncate">Địa chỉ</th>
                    <th class="text-truncate">Số điện thoại</th>
                    <th class="text-truncate">Email</th>
                    <th class="text-truncate">Học vị</th>
                    <th class="text-truncate">Chức danh</th>
                    <th class="text-truncate">Chức vụ</th>
                    <th class="text-truncate">Trạng thái</th>
                    <th class="text-truncate">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var gv in Model)
                {
                    <tr>
                        <td class="text-truncate">@gv.MaGV</td>
                        <td class="text-truncate">@gv.HoTen</td>
                        <td class="text-truncate">@gv.NgaySinh?.ToString("dd/MM/yyyy")</td>
                        <td class="text-truncate">@gv.GioiTinh</td>
                        <td class="text-truncate">@gv.DiaChi</td>
                        <td class="text-truncate">@gv.Mobile</td>
                        <td class="text-truncate">@gv.Email</td>
                        <td class="text-truncate">@gv.HocVi</td>
                        <td class="text-truncate">@gv.ChucDanh</td>
                        <td class="text-truncate">@gv.ChucVu</td>
                        <td class="text-truncate">@gv.StatusGV</td>
                        <td class="text-truncate">
                            <button class="btn btn-warning btn-sm">Sửa</button>
                            <button class="btn btn-danger btn-sm">Xóa</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
